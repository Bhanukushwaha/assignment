<p style="color: green"><%= notice %></p>

<!-- <h1>Nodes</h1>
 -->
<table id="myTable">
  <tr class="header">
    <th style="width:20%;">Name</th>
    <th style="width:20%;">place</th>
    <th style="width:20%;" colspan="3">Action</th>
  </tr>
  <% @nodes.each do |node| %>
  <tr>
    <td><%= node.name %></td>
    <td><%= node&.place&.name %></td>
    <td><%= link_to "Show", node,class: "btn btn-outline-primary" %></td>
    <td><%= link_to "Edit",edit_node_path(node),class: "btn btn-outline-success" %></td>
    <td><%= button_to "Destroy", node, method: :delete,class: "btn btn-outline-danger" %></td>
  </tr>
  <% end %>
</table><br>


<%= link_to "New node", new_node_path,class: "btn btn-outline-success" %>
<%= will_paginate @nodes, renderer: BootstrapPagination::Rails %>



