<div class="container">
<%= form_with(model: node) do |form| %>
  <% if node.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(node.errors.count, "error") %> prohibited this node from being saved:</h2>

      <ul>
        <% node.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, :class=>"col-sm-3 control-label" %>
    <%= form.text_field :name ,:placeholder => "Enter your node Name" %>
  </div><br>

  <div class="form-group">
    <%= form.label :place_id, :class=>"col-sm-3 control-label"%>
    <%= form.select :place_id, Place.all.map{|u| [u.name , u.id ]} %>    
  </div><br>
  
  <div class="actions">
    <%= form.submit :class=>"btn btn-success" %>
  </div>
<% end %>
</div>
