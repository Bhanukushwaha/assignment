<p style="color: green"><%= notice %></p>

<h3>Users</h3>
<%= link_to "New user",  new_manage_path %>


<table class="table">
	<thead>   
    <tr><br>
      <th></th>
        <th>Fist Name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Company</th>  
        <th>Role</th>
        <th>Monthlycharge</th>      
        <th>Startdate</th>
        <th>Enddate</th>
        <th>Notes</th>                
        <th>Active</th>             
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user, sindex| %>
      <tr>
        <td><%#= sindex+1 %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user&.company&.name %></td>
        <td><%= user&.role&.name %></td>
         <td><%= user.monthly_charge %></td>
        <td><%= user.start_date %></td>
        <td><%= user.end_date %></td>
        <td><%= user.notes %></td>
        <td><%= user.is_active %></td>        
        <td><%= link_to "Show",  manage_path(user) %></td>
        <td><%= link_to "Edit",  edit_manage_path(user) %></td>
        <td><%= button_to 'Destroy', manage_path(user), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
