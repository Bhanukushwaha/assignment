<div class="container">
<%= form_with(model: city) do |form| %>
  <% if city.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
        <% city.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, :class=>"col-sm-2 control-label" %>
    <%= form.text_field :name ,placeholder: "Enter your city name"%>
  </div><br>

  <div class="form-group">
    <%= form.label :state_id, :class=>"col-sm-2 control-label" %>
    <%= form.select :state_id, State.all.map { |c| [c.name, c.id]  } %>
  </div><br>

  <div class="actions">
    <%= form.submit :class=>"btn btn-secondary" %>
  </div>
<% end %>
</div>
