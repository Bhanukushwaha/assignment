
<section class="vh-120 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
             <div class="invalid-feedback d-block">
              <% resource.errors.full_messages.each do |error_message| %>
                <%= error_message %>.
              <% end %>
            </div>
              <div class="row">
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">                    
                    <label class="form-label" for="first_nameAddress">First Name</label>
                    <%= f.text_field :first_name, class: "form-control form-control-lg" %>
                  </div>
                </div>
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                      <label class="form-label" for="last_name">Last Name</label>
                    <%= f.text_field :last_name, class: "form-control form-control-lg" %>
                  </div>
                </div>
              </div>

                <div class="col-md-6 mb-4">
                  <div class="form-outline">                    
                    <label class="form-label" for="email">Email</label>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control form-control-lg" %>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <label class="form-label" for="company_id">Company</label>
                    <%= f.select :company_id, Company.all.map { |c| [c.name, c.id] },{:prompt => "--select company--"},class: "form-control form-control-lg" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">
                  <div class="form-outline datepicker w-100">                    
                    <label for="Start date" class="form-label">Start date</label>
                    <%= f.date_field :start_date, class: "form-control form-control-lg" %>
                  </div>
                </div>

                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                      <label class="form-label" for="end_date">End date</label>
                    <%= f.date_field :end_date, class: "form-control form-control-lg" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">                    
                    <label class="form-label" for="typePasswordX">Password</label>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",id:"typeEmailX", class:"form-control form-control-lg",placeholder: "Enter your password"  %>
                  </div>
                </div>
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                  <label class="form-label" for="typePasswordX">Password</label>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password",id:"typeEmailX", class:"form-control form-control-lg", placeholder: "confirm password" %>
                  </div>
                </div>
              </div>  

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">                    
                    <label class="form-label" for="image">image</label>
                    <%= f.file_field :image, class: "form-control form-control-lg" %>
                  </div>
                </div>

                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                      <label class="form-label" for="role">Role</label>
                   <%= f.select :role_id, Role.all.map { |c| [c.name, c.id] },{:prompt => "--select role--"},class: "form-control form-control-lg" %>
                  </div>
                </div>
              </div>

              <div class="mt-4 pt-2">                
                <%= f.submit "Sign up" , class: "btn btn-primary btn-lg"%>
                <%= render "devise/shared/links" , class: "btn btn-primary btn-lg ffff"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





